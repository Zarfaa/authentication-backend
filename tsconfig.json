    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],   // ðŸ‘ˆ look inside src folder
  "exclude": ["node_modules", "dist"]  // ðŸ‘ˆ ignore build + deps
}
